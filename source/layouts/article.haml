%html
  %head
    %meta{charset: "utf-8"}
    %meta{"http-equiv" => 'X-UA-Compatible', content: 'IE=edge;chrome=1'}
    %title
      Blog Title
      = ' - ' + current_article.title unless current_article.nil?
    = feed_tag :atom, blog.options.prefix.to_s + '/feed.xml', title: "Atom Feed"
  %body
    #main{role: "main"}
      = yield
    
    %aside
      %h2
        Recent Articles
      %ol
        - blog.local_articles[0...10].each do |article|
          %li
            = link_to article.title, article
            %span
              = article.date.strftime('%b %e')

      %h2
        Tags
      %ol
        - blog.tags.inject({}){|m, (k, v)| m[k] = v.select{|article| article.lang == lang }; m}.each do |tag, articles|
          %li
            = link_to "#{tag} (#{articles.size})", tag_path(tag)
