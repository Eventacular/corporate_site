%html
  %head
    %meta{charset: "utf-8"}
    %meta{"http-equiv" => 'X-UA-Compatible', content: 'IE=edge;chrome=1'}
    = stylesheet_link_tag "bootstrap", "bootstrap-overrides", "article"
    %title
      Blog Title
      = ' - ' + current_article.title unless current_article.nil?
    = feed_tag :atom, blog.options.prefix.to_s + '/feed.xml', title: "Atom Feed"
  %body
    %nav.navbar.navbar-default.navbar-static-top
      .container
        .navbar-header.col-md-offset-4
          = link_to "/#{lang}/index.html", class: "navbar-brand" do
            %img{alt:"Eventacular", src: ""}
        .nav.navbar-nav
          %li
            = link_to "Blog", "/#{lang}/blog.html"
    #main{role: "main"}
      .container
        .row
          .col-xs-8
            = yield

            %aside
              %h5
                Recent Articles
              %ol
                - blog.local_articles[0...2].each do |article|
                  %li
                    = link_to article.title, article
                    %span
                      = article.date.strftime('%b %e')

              %h5
                Tags
              %ol
                - blog.tags.inject({}){|m, (k, v)| m[k] = v.select{|article| article.lang == lang }; m}.each do |tag, articles|
                  %li
                    = link_to "#{tag} (#{articles.size})", tag_path(tag)
