%html
  %head
    %meta{:charset => "utf-8"}
      / Always force latest IE rendering engine or request Chrome Frame
      %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}
        %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}
          %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}
            %meta{:content => "", :name => "description"}
              %meta{:content => "", :name => "author"}
                / Use title if it's in the page YAML frontmatter
                %title= current_page.data.title || "The Middleman"
                = stylesheet_link_tag "bootstrap", "bootstrap-overrides"
                = stylesheet_link_tag "landing-page" if current_page.path =~ /index/
                = stylesheet_link_tag "blog" if current_page.path =~ /blog/
                %link{:href => "font-awesome/css/font-awesome.min.css", :rel => "stylesheet", :type => "text/css"}
                %link{:href => "http://fonts.googleapis.com/css?family=Lato:300,400,700,300italic,400italic,700italic", :rel => "stylesheet", :type => "text/css"}
                %link{:href => "//cdn-images.mailchimp.com/embedcode/slim-081711.css", :rel => "stylesheet", :type => "text/css"}
                :css
                  #mc_embed_signup{clear:left; font:14px Helvetica,Arial,sans-serif; }
                  #mc_embed_signup form{padding: 10px 0 0px 3%}
  %body{:class => page_classes}
    %nav.navbar.navbar-default.navbar-static-top
      .container
        .navbar-header
          = link_to "/#{lang}/index.html", class: "navbar-brand" do
            %img{alt:"Eventacular", src: ""}
        .nav.navbar-nav
          %li
            = link_to "Blog", "/#{lang}/blog.html"

    = yield
    = javascript_include_tag  "jquery", "bootstrap"